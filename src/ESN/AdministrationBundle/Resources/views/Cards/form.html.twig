{% extends '::base.html.twig' %}


{% block subnavbar %}
{{ render(controller("ESNDashboardBundle:Dashboard:subnavbar")) }}
{% endblock %}

{% block body %}

<div class="row">
       
                
    <div class="span8">
        <div class="widget">
            <div class="widget-content">
            
                <h3>Cards</h3>
                
                <hr/>
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                    {{ form_errors(form)}}
                    
                     <fieldset>
                    
                         <div class="control-group">
                            <label class="control-label" for="oldnumber">Number of cards</label>
                            <div class="controls">
                                <input type="number" id="form_oldnumber" name="oldnumber" required="required" class="span3" value="{{ nbCard }}" disabled>
                            </div> <!-- /controls -->			
                        </div> <!-- /control-group -->
                         
                        <div class="control-group">
                            <label class="control-label" for="number">New number of cards</label>
                            <div class="controls">
                                {{ form_widget(form.number, { 'attr': {'class': 'span3'} }) }}
                            </div> <!-- /controls -->			
                        </div> <!-- /control-group -->
                        
                         <div class="form-actions">
                            <input type="submit" class="btn btn-primary" value="Save"/> 
                             <a class="btn" href="{{ path('esn_administration_countries') }}">Cancel</a>
                        </div> <!-- /form-actions -->
                    </fieldset>
           
            {{ form_end(form) }}
            </div><!-- /widget-content --> 
        </div><!-- /widget -->    
    </div>    
            

    
</div>
{% endblock %}
