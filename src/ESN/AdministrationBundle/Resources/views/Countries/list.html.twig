<div class="row">

                        <div class="span5">
                                <div class="widget">
                                    <div class="widget-content">
                                    
                                      
                                        <a class="btn" href="{{ path('esn_administration_countries_add') }}">Add new country</a>
                                                                                  
                                        <button class="btn">Delete selected countries</button>

                                    </div><!-- /widget-content --> 
                                </div><!-- /widget -->    
                            </div>


                    <div class="span12">
                        <div class="widget">
                            <div class="widget-content">
                                              
                                <div class="panel panel-default">

                                    <!-- Table -->
                                                    
                                    <table class="table">
                                      <thead>
                                        <tr>
                                            <th></th>
                                            <th>Name</th>
                                            <th>Nationality</th>
                                            <th>Language</th>
                                            <th>Action</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                          
                                        {% for country in countries %}
                                        <tr>
                                            <td><input type="checkbox"></td>
                                            <td>{{country.name}}</td>
                                            <td>{{country.nationality}}</td>
                                            <td>{{country.language}}</td>
                                            <td>
                                                <a href="">Edit</a> &nbsp;
                                            </td>
                                        </tr>
                                        {% endfor %} 
                                        
                                       </tbody>
                                    </table>
                                </div>
                            </div><!-- widget-content -->
                        </div><!-- /widget -->
                    </div><!-- /span12 -->   
        
                    </div>