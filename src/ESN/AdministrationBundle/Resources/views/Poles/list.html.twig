<div class="row">

    <div class="span3">
        <div class="widget">
            <div class="widget-content">

                {# <button type="submit" class="btn">Add new pole</button> &nbsp;&nbsp;#}
                <a class="btn btn-info" href="{{ path('esn_administration_poles_add') }}">Add new pole</a>
                {#                                        <button class="btn">Delete selected poles</button>#}

            </div>
            <!-- /widget-content -->
        </div>
        <!-- /widget -->
    </div>

    <div class="span12">
        <div class="widget">
            <div class="widget-content">

                <div class="panel panel-default">

                    <!-- Table -->
                    <table class="table">
                        <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Number of members</th>
                            <th>Color</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for pole in poles %}
                            <tr>
                                <td>
                                    {#                                                <input type="checkbox">#}
                                </td>
                                <td>{{ pole.name }}</td>
                                <td>{{ pole.description }}</td>
                                <td>{{ pole.nbMembers }}</td>
                                <td bgcolor="{{ pole.color }}">&nbsp;</td>
                                <td>

                                    <a href="{{ path('esn_administration_poles_edit', {
                                        'id' : pole.id
                                    }) }}">Edit</a> &nbsp;
                                    <a href="{{ path('esn_administration_poles_delete', {
                                        'id' : pole.id
                                    }) }}">Delete</a> &nbsp;
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- widget-content -->
        </div>
        <!-- /widget -->
    </div>
    <!-- /span12 -->

</div>