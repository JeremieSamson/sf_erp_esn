<div class="row">
    
    <div class="span3">
        
        <div class="widget ">
            <div class="widget-content">
                
                <img style="width: 100%;" src="{{ asset('img/user.png') }}">
                <hr/>
                <p>
                    <a href="">Change profil picture</a><br/>
                    <a href="">Delete profil picture</a>
                </p>
                    
            </div><!-- /widget-content --> 
        </div><!-- /widget -->
        
        <div class="widget">
            <div class="widget-content">
                
                <h3>Contact</h3>
                
                <hr/>
                
                Mail  <input type="text" value="{{member[0].identity.email}}"/> <br/>
                Phone  <input type="text" value="{{member[0].identity.phone}}"/>
                               
            </div><!-- /widget-content --> 
        </div><!-- /widget -->
        
    </div><!-- /span3 -->
    
    <div class="span9">
        
        <div class="widget ">
            <div class="widget-content">
                Firstname  &nbsp; <input type="text" value="{{member[0].identity.name}}"/> &nbsp; &nbsp; &nbsp;
                Surname  &nbsp; <input type="text" value="{{member[0].identity.surname}}"/>
            </div><!-- /widget-content -->
        </div><!-- /widget -->
        
        <div class="widget ">
            <div class="widget-content">
                
                <h3>Profil Information</h3>
                <hr/>
                <form id="edit-profile" class="form-horizontal">
                <fieldset>
                    
                    <div class="control-group">
                        <label class="control-label" for="password">Password</label>
                        <div class="controls">
                            <input type="password" class="span6 disabled" id="password" value="Password" disabled>
                            <p class="help-block">Your password cannot be changed directly, press this link to reset it : <a href="">Reset your password</a></p>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <hr/>
                    
                    <div class="control-group">
                        <label class="control-label" for="birthday">Birthday</label>
                        <div class="controls">
                            <input type="date" class="span6" id="birthday" value="{{ member[0].identity.birthday|date('Y-m-d') }}" >
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="nationality">Nationality</label>
                        <div class="controls">
                            <select id="nationality">
                                <option>English</option>
                                <option selected>French</option>
                                <option>Italian</option>
                                <option>Spanish</option>
                            </select>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->

                    <hr/>
                    
                    <div class="control-group">
                        <label class="control-label" for="address">Address</label>
                        <div class="controls">
                            <input type="text" class="span6" id="address" value="{{ member[0].esner.address}}" >
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="city">City</label>
                        <div class="controls">
                            <input type="text" class="span6" id="city" value="{{ member[0].esner.city}}" >
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="city">Zip Code</label>
                        <div class="controls">
                            <input type="text" class="span6" id="zip" value="{{ member[0].esner.zipcode}}" >
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <hr/>
                    
                    <div class="control-group">
                        <label class="control-label" for="study">Study</label>
                        <div class="controls">
                            <input type="text" class="span6" id="zip" value="{{ member[0].identity.study }}" >
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="university">University</label>
                        <div class="controls">
                            <select id="university">
                                <option selected>University Lille 1</option>
                                <option>University Lille 2</option>
                                <option>University Lille 3</option>
                            </select>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <hr/>
                    
                    <div class="control-group">
                        <label class="control-label" for="language1">Language 1</label>
                        <div class="controls">
                            <select id="language1">
                                <option selected>English</option>
                                <option>French</option>
                                <option>Italian</option>
                                <option>Spanish</option>
                            </select>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="language2">Language 2</label>
                        <div class="controls">
                            <select id="language2">
                                <option>English</option>
                                <option selected>French</option>
                                <option>Italian</option>
                                <option>Spanish</option>
                            </select>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="language3">Language 3</label>
                        <div class="controls">
                            <select id="language3">
                                <option>English</option>
                                <option>French</option>
                                <option selected>Italian</option>
                                <option>Spanish</option>
                            </select>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Save</button> 
			<button class="btn">Cancel</button>
                    </div> <!-- /form-actions -->
                    
                </fieldset>  
                </form>    
            </div><!-- /widget-content -->
        </div><!-- /widget -->
        
    </div><!-- /span9 -->
    
</div><!-- /row -->
