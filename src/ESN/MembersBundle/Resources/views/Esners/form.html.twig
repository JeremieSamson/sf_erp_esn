{% extends '::base.html.twig' %}

{% block subnavbar %}
    {{ render(controller("ESNDashboardBundle:Dashboard:subnavbar")) }}
{% endblock %}

{% block body %}

<div class="row">
    
    <div class="span3">

        <div class="widget">
            <div class="widget-content">
                
                <h3>Contact</h3>
                
                <hr/>
                
                Mail  <input type="text" value="{{user.email}}"/> <br/>
                Phone  <input type="text" value="{{user.phone}}"/>
                               
            </div><!-- /widget-content --> 
        </div><!-- /widget -->
        
    </div><!-- /span3 -->
    
    <div class="span9">
        
        <div class="widget ">
            <div class="widget-content">
                Firstname  &nbsp; <input type="text" value="{{user.name}}"/> &nbsp; &nbsp; &nbsp;
                Surname  &nbsp; <input type="text" value="{{user.surname}}"/>
            </div><!-- /widget-content -->
        </div><!-- /widget -->
        
        <div class="widget ">
            <div class="widget-content">
                
                <h3>Profil Information</h3>
                <hr/>
                <form id="edit-profile" class="form-horizontal">
                <fieldset>
                    
                    <div class="control-group">
                        <label class="control-label" for="password">Password</label>
                        <div class="controls">
                            <input type="password" class="span6 disabled" id="password" value="Password" disabled>
                            <p class="help-block">Your password cannot be changed directly, press this link to reset it : <a href="">Reset your password</a></p>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <hr/>
                    
                    <div class="control-group">
                        <label class="control-label" for="birthday">Birthday</label>
                        <div class="controls">
                            <input type="date" class="span6" id="birthday" value="{{ user.birthday|date('Y-m-d') }}" >
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="nationality">Nationality</label>
                        <div class="controls">
                            <select id="nationality">
                                {% for language in data.languages %}
                                    <option value="{{ language.id }}">{{ language.nationality }}</option>
                                {% endfor %}
                            </select>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->

                    <hr/>
                    
                    <div class="control-group">
                        <label class="control-label" for="address">Address</label>
                        <div class="controls">
                            <input type="text" class="span6" id="address" value="{{ user.address}}" >
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="city">City</label>
                        <div class="controls">
                            <input type="text" class="span6" id="city" value="{{ user.city}}" >
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="city">Zip Code</label>
                        <div class="controls">
                            <input type="text" class="span6" id="zip" value="{{ user.zipcode}}" >
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <hr/>
                    
                    <div class="control-group">
                        <label class="control-label" for="study">Study</label>
                        <div class="controls">
                            <input type="text" class="span6" id="zip" value="{{ user.study }}" >
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="university">University</label>
                        <div class="controls">
                            <select id="university">
                                {% for univercity in data.universities %}
                                    <option value="{{ univercity.id }}">{{ univercity.name }}</option>
                                {% endfor %}
                            </select>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <hr/>
                    
                    <div class="control-group">
                        <label class="control-label" for="language1">Language 1</label>
                        <div class="controls">
                            <select id="language1">
                                {% for language in data.languages %}
                                    <option value="{{ language.id }}">{{ language.nationality }}</option>
                                {% endfor %}
                            </select>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="language2">Language 2</label>
                        <div class="controls">
                            <select id="language2">
                                {% for language in data.languages %}
                                    <option value="{{ language.id }}">{{ language.nationality }}</option>
                                {% endfor %}
                            </select>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="language3">Language 3</label>
                        <div class="controls">
                            <select id="language3">
                                {% for language in data.languages %}
                                    <option value="{{ language.id }}">{{ language.nationality }}</option>
                                {% endfor %}
                            </select>
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Save</button> 
			<button class="btn">Cancel</button>
                    </div> <!-- /form-actions -->
                    
                </fieldset>  
                </form>    
            </div><!-- /widget-content -->
        </div><!-- /widget -->
        
    </div><!-- /span9 -->
    
</div><!-- /row -->

{% endblock %}
