{% extends '::base.html.twig' %}

{% block subnavbar %}
    {{ render(controller("ESNDashboardBundle:Dashboard:subnavbar")) }}
{% endblock %}

{% block body %}

<div class="row">

    <div class="span3">
        <div class="widget">
            <div class="widget-content">

                <h3>Contact</h3>

                {{ form_start(form) }}

                <hr/>
                {{ form_widget(form.email, {'value': user.email}) }}
                {{ form_widget(form.mobile, {'value': user.mobile}) }}
                <br/>

            </div><!-- /widget-content -->
        </div><!-- /widget -->
    </div>
    <div class="span9">
        <div class="widget">
            <div class="widget-content">

                {{ form_widget(form.firstname, {'value': user.firstname}) }}
                {{ form_widget(form.lastname, {'value': user.lastname}) }}
                {{ form_widget(form.post, {'data': user.post}) }}
                {{ form_widget(form.pole, {'data': user.pole}) }}

            </div><!-- /widget-content -->
        </div><!-- /widget -->
    </div>

    <div class="span9">
        <div class="widget">
            <div class="widget-content">

                <h3>Personal Information</h3>

                <hr/>

                <fieldset>

                    <div class="control-group">
                        <label class="control-label" for="birthday">Facebook url</label>
                        <div class="controls">
                            {{ form_widget(form.facebook_id) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <div class="control-group">
                        <label class="control-label" for="birthday">Birthday</label>
                        <div class="controls">
                            {{ form_widget(form.birthdate, {'value': user.birthdate|date('Y-m-d')}) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <div class="control-group">
                        <label class="control-label" for="address">Nationality</label>
                        <div class="controls">
                            {{ form_widget(form.nationality) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <div class="control-group">
                        <label class="control-label" for="hasCare">Voiture</label>
                        <div class="controls">
                            {{ form_widget(form.hasCare) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <hr/>

                    <h3>ESN Information</h3>

                    <div class="control-group">
                        <label class="control-label" for="hasCare">Mentor</label>
                        <div class="controls">
                            {{ form_widget(form.mentor) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <hr/>

                    <h3>Erasmus Information</h3>

                    <div class="control-group">
                        <label class="control-label" for="erasmus">Erasmus</label>
                        <div class="controls">
                            {{ form_widget(form.erasmusProgramme) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <div class="control-group">
                        <label class="control-label" for="erasmusyearstart">DÃ©but</label>
                        <div class="controls">
                            {{ form_widget(form.erasmusyearstart, {'value': user.erasmusyearstart|date('Y-m-d')}) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <div class="control-group">
                        <label class="control-label" for="erasmusyearend">Fin</label>
                        <div class="controls">
                            {{ form_widget(form.erasmusyearend, {'value': user.erasmusyearend|date('Y-m-d')}) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <hr/>

                    <div class="control-group">
                        <label class="control-label" for="address">Address</label>
                        <div class="controls">
                            {{ form_widget(form.address, {'value': user.address}) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <div class="control-group">
                        <label class="control-label" for="zipcode">Zipcode</label>
                        <div class="controls">
                            {{ form_widget(form.zipcode, {'value': user.zipcode}) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <div class="control-group">
                        <label class="control-label" for="ville">Ville</label>
                        <div class="controls">
                            {{ form_widget(form.city, {'value': user.city}) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <hr/>
                    <div class="control-group">
                        <label class="control-label" for="study">Study</label>
                        <div class="controls">
                            {{ form_widget(form.study, {'value': user.study}) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <div class="control-group">
                        <label class="control-label" for="university">University</label>
                        <div class="controls">
                            {{ form_widget(form.university, {'data': user.university}) }}
                        </div> <!-- /controls -->
                    </div> <!-- /control-group -->

                    <div class="form-actions">
                        <input type="submit" class="btn btn-primary" value="Save">
                        <button class="btn">Cancel</button>
                    </div> <!-- /form-actions -->

                </fieldset>
                {{ form_end(form) }}

            </div><!-- /widget-content -->
        </div><!-- /widget -->
    </div>

</div>
{% endblock %}