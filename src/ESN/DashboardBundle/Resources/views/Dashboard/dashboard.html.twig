<div class="row">
    {% if dashboard.events %}
        <div class="span8">
            <div class="widget widget-nopad">
                <div class="widget-header"> <i class="icon-list-alt"></i>
                  <h3> Next Events</h3>
                </div>
                <!-- /widget-header -->
                <div class="widget-content">
                  <ul class="news-items">
                      {% for event in dashboard.events %}
                          <li>
                              <div class="news-item-detail">
                                  <a href="{{ event.link }}" class="news-item-title" target="_blank">
                                      <img src="{{ event.image }}" style="width: 60%;">
                                  </a>
                                  <div style="width:40%;float: right;">
                                      <div style="margin-left: 20px;">
                                          <p>
                                              <a href="{{ event.link }}" class="news-item-title" target="_blank">
                                                  {{ event.title }}
                                              </a>
                                          </p>
                                          <p>
                                              {{ event.description|raw }}
                                          </p>
                                      </div>
                                  </div>
                              </div>
                          </li>
                      {% endfor %}
                  </ul>
                </div>
                <!-- /widget-content -->
              </div>
              <!-- /widget -->
        </div>
    {% endif %}

    <div class="span4">
        <div class="widget widget-nopad">
            <div class="widget-header"> <i class="icon-list-alt"></i>
                <h3> Social Media </h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="widget big-stats-container">
                    <div class="widget-content">
                        <div id="big_stats" class="cf">
                            <div class="stat">
                                <i class="icon-facebook"></i>
                                <span class="value">{{ dashboard.facebook.likes }}</span> Likes
                            </div>
                        </div>
                    </div>
                    <!-- /widget-content -->
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="span4">
        <div class="widget widget-nopad">
            <div class="widget-header"> <i class="icon-list-alt"></i>
              <h3> Members</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
              <div class="widget big-stats-container">
                <div class="widget-content">
                  
                  <div id="big_stats" class="cf">
                    <div class="stat"> <i class="icon-user"></i> <span class="value">{{ dashboard.members.esners }}</span> ESNers</div>
                    <div class="stat"> <i class="icon-user"></i> <span class="value">{{ dashboard.members.erasmus }}</span> Erasmus</div>
                  </div>
                </div>
                <!-- /widget-content --> 
              </div>
            </div>
        </div>    
    </div>

    {% if dashboard.reports %}
        <div class="span8">
            <div class="widget widget-nopad">
                <div class="widget-header"> <i class="icon-list-alt"></i>
                  <h3> Permanence</h3>
                </div>
                <!-- /widget-header -->
                <div class="widget-content">
                  <div class="widget big-stats-container">
                    <div class="widget-content">
                        <ul class="news-items">
                            {% for report in dashboard.reports %}
                                <li>
                                    <div class="news-item-date"> <span class="news-item-day">{{ report.date|date("d") }}</span> <span class="news-item-month">{{ report.date|date("M") }}</span> </div>
                                    <div class="news-item-detail"> <a href="{{ path('esn_permanence_seeReport', { 'id': report.id }) }}">Rapport de permanence #{{ report.id }}</a>
                                        <p class="news-item-preview">{{ report.comments }}</p>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <!-- /widget-content -->
                  </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>

<div class="row">
    <div class="span12">
        <div class="widget widget-nopad">
            <div class="widget-header"> <i class="icon-list-alt"></i>
                <h3>Google Calendar</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <iframe src="https://calendar.google.com/calendar/embed?src=lille%40ixesn.fr&ctz=Europe/Brussels" style="border: 0" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
            </div>
            <!-- /widget-content -->
        </div>
        <!-- /widget -->
    </div>
</div>

