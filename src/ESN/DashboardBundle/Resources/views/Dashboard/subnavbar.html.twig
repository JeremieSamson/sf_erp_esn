                    <li class="dropdown {% if '/human-ressources' in (app.request.server.get('PHP_SELF')) %}active{% endif %} ">
                        <a href="{{ path('esn_hr_recruitment_create') }}">
                            <i class="icon-group"></i>
                            <span>Postuler</span>
                            <b class="caret"></b>
