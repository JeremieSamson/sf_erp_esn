                                {% if '/security' in (app.request.server.get('PHP_SELF')) %}
                                    active
                                {% endif %} ">
                                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-lock"></i>
                                    <span>Security</span>
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('esn_administration_security') }}">Activities</a></li>
                                </ul>
                            </li>
