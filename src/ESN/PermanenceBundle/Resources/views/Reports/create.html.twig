{% extends 'ESNMembersBundle::index.html.twig' %}

{% block body %}

    {{ parent() }}

    <script>
        $(document).ready( function() {
            console.log("ici");
            $('#form_report_sellCard').keyup(function() {
                var val = $('#available_card_fix').val();
                var nbcard = $('#form_sellCard').val();
                var newval = val - nbcard;
                $('#form_availableCard').val(newval);

                var money_before = $('#form_amountBefore').val();
                var money_after = parseInt(money_before) + parseInt(nbcard*5);
                $('#form_amountAfter').val(money_after);
            });
        });
    </script>

    <div class="span12">
        <div class="widget">
            <div class="widget-content">
                <a href="{{ path('esn_permanence_reports') }}"> Retour </a>

                <h2> Permanence report </h2>
                <br>
                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                {{ form_errors(form) }}
                <fieldset>
                    <h3> Money</h3>

                    <div class="control-group">
                        <label class="span3" for="money_before">Money before this report : </label>
                        <div class="controls">
                            {{ form_widget(form.amountBefore, { 'attr': {'class': 'span3', 'disabled': '' } }) }}
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="span3" for="money_before">Money after this report : </label>
                        <div class="controls">
                            {{ form_widget(form.amountAfter, { 'attr': {'class': 'span3', 'disabled': '' }}) }}
                        </div>
                    </div>

                    <h3> Cards </h3>

                    <div class="control-group">
                        <label class="span3" for="nbCardSold">Number of sold cards : </label>

                        <div class="controls">
                            {{ form_widget(form.sellCard, { 'attr': {'class': 'span3', 'min': '1'} }) }}
                        </div>
                        <!-- /controls -->
                    </div>
                    <div class="control-group">
                        <label class="span3" for="nbCardSoldAvailable">Number of available cards : </label>

                        <div class="controls">
                            {{ form_widget(form.availableCard, { 'attr': {'class': 'span3', 'min': '1', 'disabled': ''} }) }}
                            <input type="hidden" id="available_card_fix" value="{{ cards }}">
                        </div>
                        <!-- /controls -->
                    </div>

                    <h3> Informations </h3>

                    <div class="control-group">
                        <label class="span3" for="comments">Comments : </label>

                        <div class="controls">
                            {{ form_widget(form.comments, { 'attr': {'class': 'span4'} }) }}
                        </div>
                    </div>


                    <div class="form-actions">
                        <input type="submit" class="btn btn-primary" value="Save"/>
                        <a class="btn" href="{{ path('esn_permanence_reports') }}">Cancel</a>
                    </div>
                    <!-- /form-actions -->
                </fieldset>

                {{ form_end(form) }}
            </div>
            <!-- widget-content -->
        </div>
        <!-- /widget -->
    </div><!-- /span8 -->
{% endblock %}