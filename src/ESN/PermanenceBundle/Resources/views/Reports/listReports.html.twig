<div class="span12">
    <p>
        {% for message in app.session.flashbag.get('notice') %}
    <div class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong> Success!</strong> {{ message }}
    </div>
    {% endfor %}
    </p>
</div>

<div class="span3">
    <div class="widget">
        <div class="widget-content">
            <a href="{{ path('esn_permanence_createReports') }}">
                <button class="btn btn-info">Create report</button>
            </a>
        </div>
    </div>
</div>

<div class="span12">
    <div class="widget">
        <div class="widget-content">
            <div class="panel panel-default">

                <!-- Table -->
                <table class="table">
                      <thead>
                            <tr>
                              <th>Date</th>
                              <th>Number of cards sold </th>
                              <th>Sales amount</th>
                              <th>Action</th>
                            </tr>
                      </thead>
                      <tbody>
                            {% for report in reports %}
                                <tr>
                                   <td>{{report.date|date('d/m/Y G:i ')}}</td>
                                   <td>{{report.sellCard}}</td>
                                   <td>{{report.amountSell}}</td>
                                   <td><a href="{{path('esn_permanence_seeReport', {
                                                    'id' : report.id
                                                   })}}">View details</a></td>
                               </tr>
                            {%endfor %}
                      </tbody>
                </table>
            </div>
        </div><!-- widget-content -->
    </div><!-- /widget -->
</div><!-- /span8 -->
