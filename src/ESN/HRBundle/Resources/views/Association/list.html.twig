<div class="row">

    <div class="span12">
        <p>
            {# On affiche tous les messages flash dont le nom est « info » #}
            {% for message in app.session.flashbag.get('notice') %}
                <div class="alert alert-success">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <strong> Success!</strong> {{ message }}
                </div>
            {% endfor %}
        </p>
    </div>

    <div class="span3">
        <div class="widget">
            <div class="widget-content">

                <a class="btn btn-info" href="{{ path('esn_hr_association_add') }}">Add new Esner</a>

            </div><!-- /widget-content -->
        </div><!-- /widget -->
    </div>

    <div class="span12">
        <div class="widget">
            <div class="widget-content">

                <div class="panel panel-default">

                    <!-- Table -->
                    <table class="table">
                      <thead>
                        <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Admission Date</th>
                            <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>

                          {% for esner in esners %}
                                <tr>
                                    <td>{{esner.member.name}}</td>
                                    <td>{{esner.member.surname}}</td>
                                    <td>{{esner.member.inscription|date('Y-m-d')}}</td>
                                    <td>
                                        <a href="{{ path('esn_hr_association_edit', {'id' : esner.member.id}) }}">Edit</a> &nbsp;
                                        <a href="{{ path('esn_hr_association_delete', {'id' : esner.member.id}) }}">Delete</a>
                                    </td>
                                </tr>
                          {% endfor %}

                      </tbody>
                    </table>
                </div>
            </div><!-- widget-content -->
        </div><!-- /widget -->
    </div><!-- /span12 -->
</div>
