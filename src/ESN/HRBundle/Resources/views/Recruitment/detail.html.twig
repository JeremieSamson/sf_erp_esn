{% extends 'ESNHRBundle::index.html.twig' %}

{% block body %}

    {{ parent() }}

    <div class="row">
    
    <div class="span3">
        
        <div class="widget">
            <div class="widget-content">
                
                <h3>Contact</h3>
                
                <hr/>
                
                &nbsp; {{ apply.email }} <br/>
               
                               
            </div><!-- /widget-content --> 
        </div><!-- /widget -->
        
    </div><!-- /span3 -->
    
    <div class="span9">
        
        <div class="widget ">
            <div class="widget-content">
                <h3> {{ apply.name }} {{ apply.surname }}</h3>
            </div><!-- /widget-content -->
        </div><!-- /widget -->
        
        <div class="widget ">
            <div class="widget-content">
                
                <h3>Apply Information</h3>
                <hr/>
                <form id="edit-profile" class="form-horizontal">
                <fieldset>

                    <div class="control-group">
                        <label class="control-label" for="motivation">Motivations</label>
                        <div class="controls">
                            {{ apply.motivation }}
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="skill">Skills</label>
                        <div class="controls">
                            {{ apply.skill }}
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    <div class="control-group">
                        <label class="control-label" for="esnlille">ESN Lille</label>
                        <div class="controls">
                            {{ apply.knowEsn }}
                        </div> <!-- /controls -->			
                    </div> <!-- /control-group -->
                    
                    
                    <div class="form-actions">
                        <a class="btn" href="{{ path('esn_hr_recruitment') }}">Cancel</a>
                    </div> <!-- /form-actions -->
                </fieldset>  
                </form>    
            </div><!-- /widget-content -->
        </div><!-- /widget -->
        
    </div><!-- /span9 -->
    
</div><!-- /row -->
{% endblock %}
