{% extends 'ESNHRBundle::index.html.twig' %}

{% block body %}

{{ parent() }}

<div class="row">
    <div class="span12">
        <div class="widget">
            <div class="widget-content">

                <div class="panel panel-default">

                    <table id="esners" class="datatable" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>Prénom</th>
                            <th>Nom</th>
                            <th>Âge</th>
                            <th>Nationalité</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th></th>
                        </tr>
                        </thead>

                        {% for apply in applies %}
                            <tbody>
                            <tr>
                                <th>{{ apply.firstname }}</th>
                                <th>{{ apply.lastname }}</th>
                                <th>{% if apply.getAge() > 0 %} {{ apply.getAge() }} {% else %} ~ {% endif %}</th>
                                <th>{{ apply.nationality }}</th>
                                <th>{{ apply.email }}</th>
                                <th>{{ apply.mobile }}</th>
                                <th>
                                    <a href="{{ path('esn_hr_recruitment_view', {'apply_id' : apply.id}) }}">
                                        <i class="fa-eye icon-large" style="color: green;"></i>
                                    </a>
                                    <a href="{{ path('esn_hr_recruitment_delete', {'apply_id' : apply.id}) }}">
                                        <i class="icon-remove-sign icon-large" style="color: red;"></i>
                                    </a>
                                </th>
                            </tr>
                            </tbody>
                        {% endfor %}
                    </table>
                </div>
            </div><!-- widget-content -->
        </div><!-- /widget -->
    </div><!-- /span12 -->
</div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('.datatable').dataTable( {
                "bPaginate": false,
                "oLanguage": { "sSearch": "" },
                "bInfo": false,
            } );
        } );
    </script>
{% endblock %}
