<div class="row">

                        

                    <div class="span12">
                        <div class="widget">
                            <div class="widget-content">
                                              
                                <div class="panel panel-default">

                                    <!-- Table -->
                                    <table class="table">
                                      <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Surname</th>
                                            <th>Apply Date</th>
                                            <th>Action</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                        {% for apply in applies %}
                                                <tr>
                                                    <td>{{apply.name}}</td>
                                                    <td>{{apply.surname}}</td>
                                                    <td>{{apply.date|date('Y-m-d')}}</td>
                                                    <td>
                                                        <a href="{{ path('esn_hr_recruitment_view', {'id' : apply.id}) }}">View</a> &nbsp;
                                                        <a href="{{ path('esn_hr_recruitment_delete', {'id' : apply.id}) }}">Delete</a>
                                                    </td>
                                                </tr>
                                          {% endfor %} 
                                      </tbody>
                                    </table>
                                </div>
                            </div><!-- widget-content -->
                        </div><!-- /widget -->
                    </div><!-- /span12 -->   
        
                    </div>
